{
  "name": "ptm-multiregexp",
  "version": "0.0.1",
  "description": "Multi RegExp",
  "type": "module",
  "scripts": {
    "build": "tshy",
    "format": "biome format --write src",
    "lint": "biome check --write src",
    "check": "biome check src",
    "test": "tsx --test tests/*.test.ts --test-update-snapshots",
    "coverage": "mcr --import tsx -c mcr.config.cjs tsx --test tests/*.test.ts --test-update-snapshots",
    "codecov": "mcr --import tsx -c codecov.config.cjs tsx --test tests/*.test.ts --test-update-snapshots",
    "docs": "typedoc && npm run coverage",
    "deploy": "npm run docs && gh-pages -d docs",
    "deno:lint": "deno lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phothinmg/ptm-multiregexp.git"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/node": "^24.1.0",
    "gh-pages": "^6.3.0",
    "jsr": "^0.13.5",
    "monocart-coverage-reports": "^2.12.6",
    "tshy": "^3.0.2",
    "tsx": "^4.20.3",
    "typedoc": "^0.28.7",
    "typedoc-plugin-rename-defaults": "^0.7.3",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "multiregexp",
    "regexp"
  ],
  "author": "Pho Thin Mg <phothinmg@disroot.org>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/phothinmg/ptm-multiregexp/issues"
  },
  "homepage": "https://phothinmg.github.io/ptm-multiregexp/",
  "tshy": {
    "exports": {
      ".": "./src/index.ts"
    },
    "selfLink": false
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  },
  "main": "./dist/commonjs/index.js",
  "types": "./dist/commonjs/index.d.ts",
  "module": "./dist/esm/index.js"
}
